/*
 *= require light_mobile/application
*/

html, body {
  padding: 0px;
  margin: 0px;
  width: 100%;
  height: 100%;
}

body, textarea {
  font-family: verdana, tahoma;
  font-size: 14px;
}

html {
  overflow-y: scroll;
}

a:link, a:visited {
  color: blue;
  text-decoration: none;
}

a:hover, a:active {
  text-decoration: underline;
}

table.main {
  width: 100%;
  height: 100%;
  table-layout: fixed;

  td.main_header {
    background-image: url("<%= asset_path('light_mobile/layout/header_bar_bg.png') %>");
    height: 41px;
    padding-left: 5px;
    padding-right: 5px;

    table.header {
      width: 100%;
      table-layout: fixed;

      .header_left {
        width: 35px;
      }

      .header_title {
        color: #ffffff;
        text-align: center;
        overflow: hidden;
        white-space: nowrap;
      }

      .header_right {
        white-space: nowrap;
        width: 100px;
      }
    }
  }

  td.main_content {
    vertical-align: top;
    overflow: auto;
    max-width: 100%;

    .content {
      margin: 14px;
    }

    .flash-messages {
      margin: 14px;
    }
  }

  td.main_footer {
    background-image: url("<%= asset_path('light_mobile/layout/header_bar_bg.png') %>");
    height: 41px;
    text-align: center;

    a:link, a:visited {
      color: #fff;
      text-decoration: none;
    }

    a:hover, a:active {
      text-decoration: underline;
    }
  }
}
